
$MAIN:menu[^table::sql{select id, menu_title, menu_uri, visible, menu_parent_id from ${MAIN:sql_config.table_prefix}menu where menu_id = '1' and (menu_parent_id = '^MAIN:part_params.int(0)' or id = '^MAIN:part_params.int(0)') order by order_by ASC}]
$menu_id[^MAIN:part_params.int(0)]

^if(^MAIN:menu.locate[id;$menu_id]){

<span class="title"><a href="^uri:get_uri_by_menu_id[${MAIN:menu.id}]">^MAIN:menu.menu_title.upper[]</a>  $menu_id </span>

^if(-f "/files/menu/${menu_id}.jpg"){
<img class="pic shadow radius8" src="/files/menu/${menu_id}.jpg" alt="$MAIN:menu.menu_title" title="$MAIN:menu.menu_title" />}

$MAIN:submenu[^table::sql{select id, menu_id, menu_title, menu_uri, menu_parent_id, visible, module from ${MAIN:sql_config.table_prefix}menu where menu_parent_id = '${menu_id}' order by order_by ASC}]
^if($MAIN:submenu){

^if($MAIN:menu.menu_title eq "Клиентам" || $MAIN:menu.menu_title eq "E-Commerce"){
^MAIN:submenu.menu{
